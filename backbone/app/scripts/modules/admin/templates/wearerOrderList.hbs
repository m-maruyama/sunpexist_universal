<div class="text-center tablewidth divcentering" >
  <!-- start scrollTable -->
  <div id="scrollTable">
    <table>
      <th>発注送信一覧</th>
    </table>
    <table class="table table-bordered order_table">
      <thead class="grad_head">
        <tr>
          <th rowspan="2">No.</th>
          <th rowspan="2">アイテム</th>
          <th rowspan="2">選択方法</th>
          <th rowspan="2">標準枚数</th>
          <th>商品-色</th>
          <th rowspan="2">サイズ</th>
          <!--<th rowspan="2" class="individual_flg" style="display:none;">対象</th>-->
          <!--<th rowspan="2" class="individual_flg" style="display:none;">個体管理番号</th>-->
          <th rowspan="2">発注枚数</th>
          <th rowspan="2">返却枚数</th>
        </tr>
        <tr>
          <th>商品名</th>
        </tr>
      </thead>
      <input type="hidden" name="add_list_cnt" value="{{add_list_cnt}}">
      <tbody>
      {{#if list}}
        {{#each list}}
        <tr>
          <td>
            {{list_no}}
            <input type="hidden" name="add_rntl_sect_cd{{arr_num}}" value="{{rntl_sect_cd}}">
            <input type="hidden" name="add_job_type_cd{{arr_num}}" value="{{job_type_cd}}">
            <input type="hidden" name="add_job_type_item_cd{{arr_num}}" value="{{job_type_item_cd}}">
            <input type="hidden" name="add_item_cd{{arr_num}}" value="{{item_cd}}">
            <input type="hidden" name="add_color_cd{{arr_num}}" value="{{color_cd}}">
          </td>
          <td>{{item_name}}</td>
          <td>
            {{choice}}
            <input type="hidden" name="add_choice_type{{arr_num}}" value="{{choice_type}}">
          </td>
          <td>
            {{std_input_qty}}
            <input type="hidden" name="add_std_input_qty{{arr_num}}" value="{{std_input_qty}}">
          </td>
          <td>
            {{item_and_color}}<br>{{input_item_name}}
          </td>
          <td class="input">
            <select class="form-control input-sm" id="add_size_cd{{arr_num}}" name="add_size_cd{{arr_num}}">
              {{#each size_cd_list}}<option value="{{size_cd}}">{{size_cd}}</option>{{/each}}
            </select>
          <td class="individual_flg" style="display:none;">
            {{#if individual_disp}}
              {{#each individual_chk}}
              <label>
                <input type="checkbox" id="add_target_flg" name="add_target_flg[]" value="{{individual_ctrl_no}}" {{checked}} {{disabled}}>
              </label><br>
              {{/each}}
            {{/if}}
          </td>
          <td class="individual_flg" style="display:none;">
            {{#if individual_disp}}
              {{{individual_ctrl_no}}}
            {{/if}}
          </td>
          <td>
            <input type="text" style="width:4em" class="input-sm" id="add_order_num{{arr_num}}" name="add_order_num{{arr_num}}" value="{{order_num}}" {{order_num_disable}}>
            <input type="hidden" name="add_order_num_disable{{arr_num}}" value="{{order_num_disable}}">
          </td>
          <td>
          </td>
        </tr>
        {{/each}}
      {{else}}
          <tr class="edit">
            <td colspan="10"><b>対象商品なし</b></td>
          </tr>
      {{/if}}
      </tbody>
    </table>
  </div>
  <!-- end scrollTable -->
</div>
