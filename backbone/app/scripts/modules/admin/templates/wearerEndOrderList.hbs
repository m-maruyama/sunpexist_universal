<div class="row">
  <p class="col-md-7"></p>
</div>
<div class="text-center tablewidth divcentering" >
  <!-- start scrollTable -->
  <div id="scrollTable">
    <div style="padding-bottom:10px;">
      <table>
        <th>返却商品一覧</th>
          <input type="hidden" name="list_cnt" value="{{list_cnt}}">
          <input type="hidden" name="individual_flg" value="{{individual_flg}}">
      </table>
    </div>
    <form name="individual">
      <table class="table table-bordered order_table">
        <thead class="grad_head">
        <tr>
          <th rowspan="2">No.</th>
          <th rowspan="2">アイテム</th>
          <th rowspan="2">標準枚数</th>
          <th>商品-色</th>
          <th rowspan="2">サイズ</th>
          <th rowspan="2" class="individual_flg" style="display:none;">対象</th>
          <th rowspan="2" class="individual_flg" style="display:none;">個体管理番号</th>
          <th rowspan="2">返却枚数</th>
        </tr>
        <tr>
          <th>商品名</th>
        </tr>
        </thead>
        {{#if list}}
        {{#each list}}
        <tr>
          <td>
            {{list_no}}
            <input type="hidden" name="rntl_sect_cd{{arr_num}}" value="{{rntl_sect_cd}}">
            <input type="hidden" name="job_type_cd{{arr_num}}" value="{{job_type_cd}}">
            <input type="hidden" name="job_type_item_cd{{arr_num}}" value="{{job_type_item_cd}}">
            <input type="hidden" name="item_cd{{arr_num}}" value="{{item_cd}}">
            <input type="hidden" name="color_cd{{arr_num}}" value="{{color_cd}}">
            <input type="hidden" name="size_cd{{arr_num}}" value="{{size_cd}}">
          </td>
          <td>{{item_name}}</td>
          <td>
            {{std_input_qty}}
            <input type="hidden" name="std_input_qty{{arr_num}}" value="{{std_input_qty}}">
          </td>
          <td>
            {{item_and_color}}<br>{{input_item_name}}
          </td>
          <td>
            <select disabled class="form-control input-sm" id="add_size_cd{{arr_num}}" name="add_size_cd{{arr_num}}">
              {{#each size_cd_list}}<option value="{{size_cd}}" {{selected}}>{{size_cd}}</option>{{/each}}
            </select>
          </td>
          <input type="hidden" name="individual_cnt{{arr_num}}" value="{{individual_cnt}}">
          <td class="individual_flg" style="display:none;">
            {{#each individual_chk}}
            <label>
              <input type="checkbox" id="target_flg{{name_no}}" name="target_flg{{name_no}}" value="{{individual_ctrl_no}}" checked disabled>
            </label>
            {{{br}}}
            {{/each}}
            <input type="hidden" id="target_flg{{arr_num}}" name="target_flg{{arr_num}}" value="empty">
          </td>
          <td class="individual_flg" style="display:none;">
            {{{individual_ctrl_no}}}
          </td>
          <td>
            <input disabled type="text" style="width:4em; font-weight:normal; text-align:center;" class="input-sm" id="return_num{{arr_num}}" name="return_num{{arr_num}}" value="{{return_num}}" {{return_num_disable}}>
            <input type="hidden" name="return_num_disable{{arr_num}}" value="{{return_num_disable}}">
          </td>
        </tr>
        {{/each}}
        {{else}}
        <tr class="edit">
          <td colspan="10"><b>対象商品なし</b></td>
        </tr>
        {{/if}}
      </table>
    </form>
</div>
