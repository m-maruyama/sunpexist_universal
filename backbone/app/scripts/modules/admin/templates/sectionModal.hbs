<!-- Modal -->
<div class="modal fade" tabindex="-2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="section_modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">拠点絞り込み</h4>
			</div>
			<div class="modal-body">

				<form class="form-horizontal">
				<div class="form-group">
					<label class="col-md-2 control-label" for="rntl_sect_cd">拠点コード</label>
					<div class="col-md-3">
						<input type="text" id="rntl_sect_cd" name="rntl_sect_cd" class="form-control input-sm" maxlength="15" placeholder="" />
					</div>
				</div>
				<div class="form-group">
					<label class="col-md-2 control-label" for="rntl_sect_name">拠点名</label>
					<div class="col-md-6">
						<input type="text" id="rntl_sect_name" name="rntl_sect_name" class="form-control input-sm" maxlength="25" placeholder="" />
					</div>
				</div>

					<div class="form-group">
						<div class="col-md-2 " style="margin-left: 300px">
							<a type="button" data-page="1" class="btn btn-primary btn-sm btn-block search" title="検索" id="button1">検索</a>
						</div>
					</div>
				<div class="page col-sm-12"></div>

				<div class="listTable col-sm-17 orderDetail">
					<div>
						<table class="table table-bordered">
							<thead>
							<tr>
								<th>拠点コード</th>
								<th>拠点名</th>
								<th></th>
							</tr>
							</thead>
							<tbody>
							{{#if list}}
							{{#each list}}
							<tr><td>{{rntl_sect_cd}}</td>
								<td>{{rntl_sect_name}}</td>
								<td><a href="" class="btn btn-primary btn-large select_section"></a></td>
							</tr>
							{{/each}}
							{{else}}
							<td colspan="17">対象データがありません。</td>
							{{/if}}
							</tbody>
						</table>
					</div>
				</div>
				</form>
		</div>
	</div>
</div>
