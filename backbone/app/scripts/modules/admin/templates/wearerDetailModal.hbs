<!-- Modal -->
<div class="modal" id="wearer-detail-modal" tabindex="-1">
	<div class="modal-dialog modal-lg">
				<div class="modal-body">
			<div class="row">
				<!-- start フォーム -->
				<form class="form-horizontal">
					<div class="col-md-12 box_purple">
						<button type="button" class="close" data-dismiss="modal">
							<span aria-hidden="true">&times;</span>
						</button>

						<h1>着用者詳細</h1>
						{{#each kozin_list}}
						<div class="form-group" style="margin-bottom: 40px">
							<label class="col-md-3 control-label" for="">契約No</label>
							<div class="col-md-4">
								<input type="text" class="form-control input-sm" id="" value="{{rntl_cont_no}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">状況区分</label>
							<div class="col-md-4">
								<input type="text" class="form-control input-sm" id="" value="{{order_sts_name}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">社員コード</label>
							<div class="col-md-4">
								<input type="text" class="form-control input-sm" id="" value="{{cster_emply_cd}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">着用者名（漢字）</label>
							<div class="col-md-7">
								<input type="text" class="form-control input-sm" id="" value="{{werer_name}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">着用者名（読み仮名）</label>
							<div class="col-md-7">
								<input type="text" class="form-control input-sm" id="" value="{{werer_name_kana}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group" style="margin-bottom: 40px">
							<label class="col-md-3 control-label" for="">性別</label>
							<div class="col-md-2">
								<input type="text" class="form-control input-sm" id="" value="{{sex_kbn_name}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">異動日</label>
							<div class="col-md-4">
								<input type="text" class="form-control input-sm" id="" value="{{resfl_ymd}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">拠点</label>
							<div class="col-md-5">
								<input type="text" class="form-control input-sm" id="" value="{{rntl_sect_name}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">貸与パターン</label>
							<div class="col-md-5">
								<input type="text" class="form-control input-sm" id="" value="{{job_type_name}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">出荷先</label>
							<div class="col-md-5">
								<input type="text" class="form-control input-sm" id="" value="{{ship_to_cd}}" disabled="disabled">
							</div>
						</div>
						<div class="form-group">
							<label class="col-md-3 control-label" for="">郵便番号</label>
							<div class="col-md-3">
								<input type="text" class="form-control input-sm" id="" disabled="disabled" value="{{zip_no}}">
							</div>
						</div>
						<div class="form-group" style="margin-bottom: 40px">
							<label class="col-md-3 control-label" for="">住所</label>
							<div class="col-md-8">
								<textarea rows="3" class="form-control input-sm" id="" disabled="disabled">{{wearer_address}}</textarea>
							</div>
						</div>
						{{/each}}

						<div class="form-group">
							<label class="col-md-3 control-label text-left" for="">貸与情報</label>
							<div class="col-md-12">
								<div id="scrollTable2" style="border-bottom: none">
									<table class="table table-modal table-bordered">
										<thead class="grad_head">
											<tr>
												<th>No.</th>
												<th>商品-色(サイズ-サイズ2)</th>
												<th>商品名</th>
												<th class="individual_flg" style="display:none;">バーコード</th>
											</tr>
										</thead>
										{{#each taiyo_list}}
										<tr>
											<td>{{list_no}}</td>
											<td>{{shin_item_code}}</td>
											<td>{{item_name}}</td>
											<td class="individual_flg" style="display:none;">{{individual_ctrl_no}}</td>
										</tr>
										{{/each}}
									</table>
								</div>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
