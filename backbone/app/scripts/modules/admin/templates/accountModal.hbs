<!-- Modal -->
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" id="account_modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title display">アカウント追加</h4>
			</div>
			<div class="modal-body">
				<div class="errors"></div>
				<form>
					<div class="form-group">
						<label for="user_id">ログインID（半角英数字混合、8文字以上で入力してください。）</label>
						<input autocomplete="off" type='text' class="form-control" id='user_id' value={{user_id}}>
					</div>
					<div class="form-group">
						<label for="password">パスワード<br>（半角英数字、半角記号(!#$%&*+@?)混合、8文字以上で入力してください。）</label>
						<input autocomplete="off" type='text' class="form-control" id='password' value={{password}}>
						<label for="password" class='pass'></label>
					</div>
					<div class="form-group">
						<label for="user_name">ユーザー名称</label>
						<input type='text' class="form-control" id='user_name' value={{user_name}}>
					</div>
					<div class="form-group">
						<label for="position_name">所属</label>
						<input type='text' class="form-control" id='position_name' value={{position_name}}>
					</div>
					<div class="form-group">
						<label for="user_type">管理権限</label>
						<select id="user_type" name="user_type" class="form-control input-sm" value={{user_type}}>
							<option></option>
							<option value="1">一般</option>
							<option value="2">管理者</option>
						</select>
					</div>
				</form>
			</div>
			<input type='hidden' id='display_type'>
			<div class="modal-footer">
				<button type="button" class="btn btn-default cancel" data-dismiss="modal">キャンセル</button>
				<button type="button" class="btn btn-success update">追加</button>
			</div>
		</div>
	</div>
</div>
<!-- Modal -->
