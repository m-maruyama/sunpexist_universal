<div class="container" role="login">
	
		<div class="panel panel-default text-center" id="login_panel">
			<div class="panel-heading">
				<div class="panel-title">パスワード変更</div>
			</div>
			<div class="panel-body">
			<div class="errors"></div>
				<form class="form-horizontal" role="form">
					<div class="form-group">
							<input type="hidden" class="form-control input-sm" id="user_id">{{user_id}}
						<label class="col-md-4 control-label" for="pass">新規パスワード</label>
						<div class="col-md-8">
							<input type="text" class="form-control input-sm" id="password" placeholder="新規パスワードを入力してください" required>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-4 control-label" for="pass">新規パスワード<br>（確認）</label>
						<div class="col-md-8">
							<input type="text" class="form-control input-sm" id="password_c" placeholder="パスワード（確認）を入力してください" required>
						</div>
					</div>
					<div class ="form-group">
						<div class="col-md-offset-4 col-md-4">
							<button class="btn btn-primary form-control password" type="submit">変更</button>
						</div>
					</div>
				</form>
			</div>
			<div class="panel-footer">
				<div class="text-center">Copyright &copy; Sunpex Ist Corporation All rights reserved</div>
			</div>
		</div>