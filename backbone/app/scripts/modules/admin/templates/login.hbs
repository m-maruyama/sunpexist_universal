<div class="container" role="login">
	
		<div class="panel panel-default text-center" id="login_panel">
			<div class="panel-heading">
				<div class="panel-title">ログイン</div>
			</div>
			<div class="panel-body">
			<div class="errors"></div>
				<form class="form-horizontal" role="form">
					<div class="form-group">
						<label class="col-md-4 control-label" for="id">ログインID</label>
						<div class="col-md-8">
							<input type="text" class="form-control input-sm" id="login_id" placeholder="IDを入力してください" required autofocus>
						</div>
					</div>
					<div class="form-group">
						<label class="col-md-4 control-label" for="pass">パスワード</label>
						<div class="col-md-8">
							<input type="password" class="form-control input-sm" id="password" placeholder="パスワードを入力してください" required>
						</div>
					</div>
					<div class ="form-group">
						<div class="col-md-offset-4 col-md-4">
							<button class="btn btn-primary form-control" type="submit">ログイン</button>
						</div>
					</div>
				</form>
			</div>
			<div class="panel-footer">
				<div class="text-center">Copyright &copy; Sunpex Ist Corporation All rights reserved</div>
			</div>
		</div>